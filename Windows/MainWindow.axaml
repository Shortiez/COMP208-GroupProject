<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GroupProject.MainWindow"
        Title="GroupProject">
    
    <StackPanel Background="SlateGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
            <TextBlock Foreground="White" FontSize="18" FontWeight="Bold"> What is the correct answer?</TextBlock>
            <TextBlock Foreground="White"> A) 1</TextBlock>
            <TextBlock Foreground="White"> B) 2</TextBlock>
            <TextBlock Foreground="White"> C) 3</TextBlock>
            <TextBlock Foreground="White"> D) 4</TextBlock>
            <TextBlock Foreground="White"> E) 5</TextBlock>
        </StackPanel>
        <Canvas Width="400" Height="400" Initialized="StyledElement_OnInitialized"></Canvas>
    </StackPanel>
</Window>
