<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:GroupProject.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GroupProject.Views.BinaryAdditionLearnPageView"
             x:DataType="viewModels:BinaryAdditionLearnPageViewModel">
	<Grid RowDefinitions="Auto, Auto, Auto">

		<Grid Grid.Row="0" Background="{DynamicResource LMSYPrimary}" Height="70">
			<Label Classes="title" 
			       FontFamily="PlayfairDisplay"
			       VerticalAlignment="Center" HorizontalAlignment="Center">
				BINARY ADDITION
			</Label>
		</Grid>
		
		<Grid Grid.Row = "1" Background="{DynamicResource LMSYNeutralSecondary}" Height="70"
		      HorizontalAlignment = "Center" VerticalAlignment = "Center">
			<Button Height = "50" Command="{Binding ClickBackToHomeCommand}" 
					VerticalAlignment="Center" HorizontalAlignment="Left">
				<Image Height = "50" Width = "50" 
					   Source= "{Binding ImageFromBinding}" Stretch="Uniform"/>
			</Button>

			<Grid ColumnDefinitions="Auto, Auto">
				<Grid Grid.Column = "0" HorizontalAlignment = "Center" VerticalAlignment = "Center" > 
					<TextBlock> Question </TextBlock>
				</Grid>
				<Grid Grid.Column ="1" HorizontalAlignment = "Center" VerticalAlignment = "Center" >
					<TextBlock> Explanation </TextBlock>
				</Grid>
			</Grid>
		</Grid>
  
		<Grid Grid.Row = "2" Background="{DynamicResource LMSYNeutralSecondary}" Height="70">
			<Grid ColumnDefinitions="Auto, Auto">
				<Grid Grid.Column = "0" HorizontalAlignment = "Center" VerticalAlignment = "Center">
					<TextBlock> Current Calculation </TextBlock>
				</Grid>
				<Grid Grid.Column = "1" HorizontalAlignment = "Center" VerticalAlignment = "Center">
					<TextBlock> Key Table </TextBlock>
				</Grid>
			</Grid>
		</Grid>
	</Grid>
</UserControl>