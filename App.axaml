<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GroupProject.App"
             xmlns:local="using:GroupProject"
             RequestedThemeVariant="Default">
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="AppStyles.axaml"/>
        <StyleInclude Source="AppIcons.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- Main Colors -->
            <Color x:Key="LMSYPrimary">#13407A</Color>
            <Color x:Key="LMSYSecondary">#e46b5e</Color>
            
            <!-- Neutral Colors -->
            <Color x:Key="LMSYNeutral">#1e1e1e</Color>
            <Color x:Key="LMSYNeutralLight">#2e2e2e</Color>
            
            <!-- Semantic Colors -->
            <Color x:Key="LMSYSuccess">#64df07</Color>
            <Color x:Key="LMSYWarning">#fcaa13</Color>
            <Color x:Key="LMSYError">#fe2c2a</Color>
            <Color x:Key="LMSYInfo">#4f8dd6</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>